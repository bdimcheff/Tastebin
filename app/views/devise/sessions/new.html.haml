.row
  .sign-in
    %h1 Sign In
    = twitter_bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.email_field :email
      = f.password_field :password
      - if devise_mapping.rememberable?
        = f.toggles do
          = f.check_box :remember_me, "Remember Me"
      = f.actions do
        = f.submit 'Sign In'
