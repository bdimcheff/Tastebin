.row
  .recipe-form-box
    = form_for @recipe, :html => { class: 'recipe-form' } do |f|
      %label{for: 'name'} Name
      .field
        = f.text_field :name
      %label{for: 'body'} Body
      .field
        = f.text_area :body
      .actions
        = f.submit 'Save', class: 'save'
        %button.cancel Cancel
  .recipe-help
    = preserve render :partial => 'shared/markdown_cheatsheet'
